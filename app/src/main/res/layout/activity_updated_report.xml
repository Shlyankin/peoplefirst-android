<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubmittedReportActivity"
    android:background="@drawable/main_gradient">

    <include layout="@layout/toolbar_with_logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="130dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The report has been updated"
            android:textColor="@android:color/white"
            android:textSize="33dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginRight="16dp"
            android:text="Thank you for adding additional details to this report"
            android:layout_marginTop="30dp"
            android:visibility="visible"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drawable_white_rounded_top"
        android:padding="31dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Counseling services are available.  Would you like a referral?"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No"
                android:layout_marginTop="40dp"
                android:background="@drawable/drawable_rounded_bkg_lioght_green"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="#4e9b98"/>
            <TextView
                android:id="@+id/yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:layout_marginTop="40dp"
                android:background="@drawable/drawable_rounded_bkg_lioght_green"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="#4e9b98"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>