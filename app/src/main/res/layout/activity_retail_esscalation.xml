<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhoBeingHarassedActivity"
    android:background="@drawable/main_gradient"
    android:orientation="vertical">

    <include layout="@layout/toolbar_with_logo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/drawable_rounded_bkg_white">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="51dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="Your Report"
                        android:textSize="33sp"/>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please include names and email addresses for your company.  The domain of the email must match the email used for your People First profile."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CEO"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        />
                    <EditText
                        android:id="@+id/ceoFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:inputType="textPostalAddress"
                        android:lines="1"/>
                    <EditText
                        android:id="@+id/ceoLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:hint="Last Name"
                        android:lines="1"/>
                    <EditText
                        android:id="@+id/ceoEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:hint="Email"
                        android:lines="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General Counsel"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        />
                    <EditText
                        android:id="@+id/gcFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:inputType="textPostalAddress"
                        android:lines="1"/>
                    <EditText
                        android:id="@+id/gcLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:hint="Last Name"
                        android:lines="1"/>
                    <EditText
                        android:id="@+id/gcEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:hint="Email"
                        android:lines="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Head of HR"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        />
                    <EditText
                        android:id="@+id/hrFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:inputType="textPostalAddress"
                        android:lines="1"/>
                    <EditText
                        android:id="@+id/hrLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:hint="Last Name"
                        android:lines="1"/>
                    <EditText
                        android:id="@+id/hrEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:hint="Email"
                        android:lines="1"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#006F6B"
                android:background="@drawable/drawable_rounded_bkg_white"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>