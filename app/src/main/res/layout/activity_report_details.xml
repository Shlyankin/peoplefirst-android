<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportDetailsActivity"
    android:background="@drawable/main_gradient"
    android:orientation="vertical">

    <include layout="@layout/toolbar_with_logo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_rounded_bkg_white"
                android:paddingLeft="72dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Report detail"
                    android:textSize="30sp" />
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#006F6B"
                android:text="Reported victim"
                android:layout_marginTop="30dp"
                android:textSize="16sp"
                />
                <TextView
                    android:id="@+id/victim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Alex Miller"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#006F6B"
                    android:text="Who was the aggressor?"
                    android:layout_marginTop="30dp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/aggressor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Alex Miller"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#006F6B"
                    android:text="Where did this take place?"
                    android:layout_marginTop="30dp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Alex Miller"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#006F6B"
                    android:text="What happened?"
                    android:layout_marginTop="30dp"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Alex Miller"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[59] days remaining to reach a resolution.\nHas a resolution been reached for this report?"
                android:textColor="@android:color/white"
                android:layout_marginLeft="14sp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/victimText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Respond later. We will ask again in three days.
        You may do this at any time by finding this report
        under “My reports.”"
                android:textColor="@android:color/white"
                android:layout_marginLeft="14sp"
                android:layout_marginTop="20dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/white"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/white"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                    <TextView
                        android:id="@+id/no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="NO"
                        android:gravity="center"
                        android:layout_marginTop="33dp"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="YES"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="33dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>